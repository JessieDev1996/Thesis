    <div class="container-fluid">

        <div class="row">
            <!-- column -->
            <div class="col-lg-9" style="margin:auto">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group col-md-12">
                            <h4 class="card-title">แก้ไขข้อมูลส่วนตัว</h4>
                            <h5 class="card-subtitle">เป็นข้อมูลที่เพิ่มเข้ามาตอนเข้าใช้งานครั้งแรก</h5>
                            <hr />
                        </div>
                        <div class="form-group col-md-12" style="margin-top:20px;">
                            <label class="font-16">ข้อมูลส่วนตัวนักศึกษา :</label>
                        </div>
                        <form method="post">


                            <div class="form-group col-md-12 d-flex">
                                <div class="col-md-4">
                                    <label>รหัสนักศึกษา :</label>
                                    <input class="form-control" name="student_id" value="@Model.Tables["Edit"].Rows[0]["student_id"]" readonly />
                                </div>
                                <div class="col-md-4">
                                    <label>ชื่อภาษาไทย :</label>
                                    <input class="form-control" name="name_th" value="@Model.Tables["Edit"].Rows[0]["name_th"]" readonly />
                                </div>
                                <div class="col-md-4">
                                    <label>ชื่อภาษาอังกฤษ :</label>
                                    <input class="form-control" name="name_en" value="@Model.Tables["Edit"].Rows[0]["name_en"]" maxlength="100" autocomplete="off" />
                                </div>
                            </div>
                            <div class="form-group col-md-12 d-flex">
                                <div class="col-md-4">
                                    <label>ชื่อภาควิชา :</label>
                                    <input class="form-control" name="major" value="@Model.Tables["Edit"].Rows[0]["major"]" readonly />
                                </div>
                                <div class="col-md-2">
                                    <label>นักศึกษาชั้นปีที่ :</label>
                                    <input class="form-control" type="number" name="year" value="@Model.Tables["Edit"].Rows[0]["year"]" maxlength="5" autocomplete="off" />
                                </div>
                                <div class="col-md-4">
                                    <label>อาจารย์ที่ปรึกษา :</label>
                                    <input class="form-control" name="advisor" value="@Model.Tables["Edit"].Rows[0]["advisor"]" maxlength="70" autocomplete="off" />
                                </div>
                            </div>

                            <div class="form-group col-md-12 d-flex">
                                <div class="col-md-3">
                                    <label>เกรดเฉลี่ยภาคการศึกษาที่ผ่านมา :</label>
                                    <input class="form-control" type="number" name="gpa" value="@Model.Tables["Edit"].Rows[0]["gpa"]" maxlength="5" autocomplete="off" />
                                </div>
                                <div class="col-md-3">
                                    <label>เกรดเฉลี่ยรวม :</label>
                                    <input class="form-control" type="number" name="gpax" value="@Model.Tables["Edit"].Rows[0]["gpax"]" maxlength="5" autocomplete="off" />
                                </div>
                                <div class="col-md-6" style="margin-top:30px; margin-left:10%;">
                                    <label class="radio-inline m-r-30">
                                        <input class="m-r-10" type="radio" name="study" value="ภาคปกติ">ภาคปกติ
                                    </label>
                                    <label class="radio-inline">
                                        <input class="m-r-10" type="radio" name="study" value="ภาคพิเศษ">ภาคพิเศษ
                                    </label>
                                    <input type="hidden" id="get_study" value="@Model.Tables["Edit"].Rows[0]["study"]" />
                                </div>
                            </div>
                            <div class="form-group col-md-12 d-flex">
                                <div class="col-md-3">
                                    <label>บัตรประจำตัวประชาชนเลขที่ :</label>
