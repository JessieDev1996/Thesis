                                    <label>ศาสนา :</label>
                                    <input class="form-control" name="religion" value="@Model.Tables["Edit"].Rows[0]["religion"]" maxlength="20" autocomplete="off" />
                                </div>
                                <div class="col-md-3">
                                    <label>วันเดือนปีเกิด :</label>
                                    <input class="form-control datepicker" name="date_birth" value="@Model.Tables["Edit"].Rows[0]["date_birth"]" maxlength="20" autocomplete="off" />
                                </div>
                                <div class="col-md-2">
                                    <label>เพศ :</label>
                                    <select class="selectpicker form-control" id="major" title="Please select" name="gender">
