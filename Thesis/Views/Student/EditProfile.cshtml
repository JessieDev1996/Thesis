                                    </select>
                                    <input type="hidden" id="get_gender" value="@Model.Tables["Edit"].Rows[0]["gender"]" />
                                </div>
                                <div class="col-md-2">
                                    <label>ส่วนสูง :</label>
                                    <input class="form-control" type="number" name="height" value="@Model.Tables["Edit"].Rows[0]["height"]" maxlength="5" autocomplete="off" />
