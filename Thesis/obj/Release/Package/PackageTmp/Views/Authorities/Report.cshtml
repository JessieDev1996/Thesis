
@using System.Data;
@model DataSet

@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/_LayoutAuthoritiesTemplate.cshtml";
}

<div class="container-fluid" style="margin-top:30px;">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <!-- Row -->



    <div class="row">
        <div class="col-md-9" style="margin:auto;">
            <div class="card">
                <div class="card-body">
                    <div class="form-group" style="text-align:center; margin:auto;">
                        <div class="col-md-12">

                            <h4 class="card-title">พิมพ์ใบรายชื่อและบริษัทที่ออกฝึก</h4>
                            @using (Html.BeginForm("excelReport", "Authorities", null, FormMethod.Post, new { target = "_blank" }))
                            {
                                <div class="form-group">
                                    <label class="col-sm-12">เลือกเทอมการศึกษา</label>
                                    <div class="col-sm-12">
                                        <select class="form-control form-control-line" name="sem" id="major">
                                            <option selected>กรุณาเลือก</option>
                                            @foreach (DataRow sem in Model.Tables[0].Rows)
                                            {
                                                <option value="@sem[0]">@sem[0]</option>

                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-12">เลือกภาควิชา</label>
                                    <div class="col-sm-12">
                                        <select class="form-control form-control-line" name="major" id="major">
                                            <option selected>กรุณาเลือก</option>
                                            @foreach (DataRow major in Model.Tables[1].Rows)
                                            {
                                                <option value="@major[0]">@major[0]</option>

                                            }
                                        </select>
                                    </div>
                                </div>

                                <button class="btn btn-success" type="submit" style="margin:auto; width:200px;" name="id" value="@ViewData["user_id"]">พิมพ์</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

